<body style="background-color: black">
	<!--================Login Box Area =================-->
	<section class="login_box_area section_gap mt-4 row animated bounceInUp">
		<div class="container">
			<div class="row">
				<div class="col-lg-6">
					<div class="login_box_img col-12">
						<img class="img-fluid" src="img/login.jpg" alt="">
						<div class="hover text-center offset-md-3 offset-2">
							<h4>SPA?</h4>
							<p style="font-size: 13px">SPA simply means Simple Profile Application which allows you to simply sign up, sign in and modify your profile...</p>
                             <a class="primary-btn" href="signup.epic" style="text-decoration: none">Create an Account</a>
						</div>
					</div>
				</div>
				<div class="col-lg-6">
                    <div class="login_form_inner col-12">
                        <% if(status=="password_err"){ %>
                            <div class="alert alert-danger text-sm-center offset-3 font-weight-bold font-italic col-6" style="font-size: 13px">
                                Login Error
                            </div>
                            <%} %>
                            
                            <% if(status=="signedIn"){ %>
                            <div class="alert alert-success text-sm-center text-uppercase font-italic font-weight-bold" style="font-size: 10px">
                                Congratulations!, please kindly login with your new password and Id(New id: <%= id %>).
                            </div>
                            <%} %>
						<h3 class="text-light">Log in to enter</h3>
						<form action="login" method="POST" class="row login_form" id="contactForm" novalidate="novalidate">
							<div class="col-md-12 form-group">
								<input type="text" class="form-control" name="id" value="<%=id %>" style="background-color: black" placeholder="id here" onfocus="this.placeholder = ''" onblur="this.placeholder = 'id here'">
							</div>
							<div class="col-md-12 form-group">
								<input type="password" class="form-control" style="background-color: black" name="password" placeholder="Password" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Password'">
							</div>
							
							<div class="col-md-12 form-group">
								<button type="submit" value="submit" class="primary-btn">Log In</button>
								<a href="#">Forgot Password?</a>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</section>
	<!--================End Login Box Area =================-->

	<div id="bottom" class="mt-3">
        SPA stores your data for future modifiation and or usage...
    </div>
